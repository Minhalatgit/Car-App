<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.HistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.michalsvec.singlerowcalendar.calendar.SingleRowCalendar
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:deselection="false"
            app:longPress="false"
            app:multiSelection="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_curve_bg"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/jobIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/job_icon" />

                <TextView
                    android:id="@+id/totalJobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/jobIcon"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Total Jobs"
                    android:textColor="@color/dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/totalJobs"
                    android:layout_alignStart="@id/totalJobs"
                    android:fontFamily="@font/poppins_bold"
                    android:text="10"
                    android:textColor="@color/dark" />

            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_curve_filled_bg"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/moneyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/money_icon" />

                <TextView
                    android:id="@+id/spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/moneyIcon"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Spent"
                    android:textColor="@color/dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spent"
                    android:layout_alignStart="@id/spent"
                    android:fontFamily="@font/poppins_bold"
                    android:text="$325.00"
                    android:textColor="@color/dark" />

            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/history_item" />

    </LinearLayout>
</layout>