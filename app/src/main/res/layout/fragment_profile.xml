<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.views.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_three">

            <RelativeLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/back_icon"
                    android:visibility="gone"
                    app:tint="@color/yellow" />

                <TextView
                    android:id="@+id/edit"
                    style="@style/MediumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    android:text="Edit"
                    android:textColor="@color/orange"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/done"
                    style="@style/MediumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    android:text="Done"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cancel"
                    style="@style/MediumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="15dp"
                    android:text="Cancel"
                    android:textColor="@color/orange"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/profileImageLayout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    app:civ_border_color="@color/yellow"
                    app:civ_border_width="2dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        app:civ_border_color="@color/yellow"
                        app:civ_border_width="2dp"
                        tools:src="@drawable/profile_placeholder" />

                    <ImageView
                        android:id="@+id/uploadIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/upload_icon"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/username"
                    style="@style/BoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileImageLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    tools:text="Martha Banks" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topLayout"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:padding="20dp">

                <TextView
                    android:id="@+id/info"
                    style="@style/MediumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMATION"
                    android:textColor="@color/grey" />

                <RelativeLayout
                    android:id="@+id/usernameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/usernameLabel"
                        style="@style/RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Username"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/usernameTwo"
                        style="@style/RegularTextView"
                        android:backgroundTint="@color/yellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/usernameLabel"
                        android:layout_marginTop="10dp"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textSize="17sp"
                        tools:text="Martha Banks" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameLayout"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/phoneLabel"
                        style="@style/RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone number"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/phone"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:layout_below="@id/phoneLabel"
                        android:layout_marginTop="10dp"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textSize="17sp"
                        tools:text="584-490-9153" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneLayout"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/emailLabel"
                        style="@style/RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/email"
                        style="@style/RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emailLabel"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey"
                        android:textSize="17sp"
                        tools:text="martha@gmail.com" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/genderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailLayout"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/genderLabel"
                        style="@style/RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="15sp" />

                    <me.mutasem.booleanselection.BooleanSelectionView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/genderLabel"
                        android:layout_marginTop="10dp"
                        app:endText="Female"
                        app:selectedColor="@color/yellow"
                        app:startText="Male"
                        app:textColor="@color/dark"
                        app:unSelectedColor="@color/grey" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/birthdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genderLayout"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/birthdayLabel"
                        style="@style/RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/birthday"
                        style="@style/RegularTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/birthdayLabel"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey"
                        android:textSize="17sp"
                        tools:text="April 16, 1988" />

                </RelativeLayout>

            </RelativeLayout>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/progress"
                style="@style/SpinKitView.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="2dp"
                android:visibility="gone"
                app:SpinKit_Color="@color/dark" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</layout>