<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.views.InviteFriendFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <RelativeLayout
                android:id="@+id/cardLayout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/round_yellow_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/teamwork_image" />

            </RelativeLayout>

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Invite Friends"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/earn"
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earn up to $150 a day"
                android:textSize="30sp" />

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="When your friend sign up with your referral code, you can receive up to $150 a day."
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:text="SHARE YOUR INVITE CODE"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/inviteCode"
                style="@style/BoldTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="7dp"
                android:background="@drawable/grey_curve_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="0905070017"
                android:textSize="17sp" />

            <Button
                android:id="@+id/invite"
                style="@style/BoldTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/yellow_rectangle_bg"
                android:text="INVITE"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>
</layout>